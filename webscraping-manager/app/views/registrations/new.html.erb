<div style="max-width: 400px; margin: 0 auto;">
  <div class="card">
    <h1 style="margin-top: 0; margin-bottom: 1.5rem; font-size: 1.5rem;">Register</h1>
    
    <%= form_with url: register_path do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-input", required: true, placeholder: "user@example.com" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-input", required: true, placeholder: "******" %>
      </div>

      <div style="margin-top: 1.5rem;">
        <%= f.submit "Sign Up", class: "btn btn-primary", style: "width: 100%" %>
      </div>
    <% end %>
    
    <div style="margin-top: 1rem; text-align: center; color: var(--text-muted);">
      Already have an account? <a href="/login" style="color: var(--primary);">Login</a>
    </div>
  </div>
</div>
